<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape android:shape="rectangle">

            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />

            <gradient
                android:angle="270"
                android:centerColor="@color/dim_foreground_disabled_holo_dark"
                android:centerY="0.5"
                android:endColor="@color/dim_foreground_disabled_holo_dark"
                android:gradientRadius="12dp"
                android:startColor="@color/dim_foreground_disabled_holo_dark" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <scale
                android:drawable="@drawable/custom_progress" />
        </clip>
    </item>
</layer-list>