<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">

        <shape android:shape="rectangle">

            <corners android:radius="12dip" />

            <stroke
                android:width="1dip"
                android:color="@color/white" />

            <gradient
                android:angle="270"
                android:centerColor="@color/dim_foreground_disabled_holo_dark"
                android:centerY="0.5"
                android:endColor="@color/dim_foreground_disabled_holo_dark"
                android:gradientRadius="12dip"
                android:startColor="@color/dim_foreground_disabled_holo_dark" />
        </shape>

    </item>

    <item android:id="@android:id/progress">
        <scale
            android:drawable="@drawable/mine_custom_gradiant"
            android:scaleWidth="98%" />
    </item>
</layer-list>